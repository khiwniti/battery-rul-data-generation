# Backend API Environment Variables
# Copy to .env for local development
# Set in Railway.com dashboard for production

# Database (auto-injected by Railway.com PostgreSQL plugin)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/battery_rul

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME="Battery RUL Prediction API"
ENVIRONMENT=development

# Security
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (Frontend URL)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Internal Service URLs (Railway.com private networking)
ML_PIPELINE_URL=http://ml-pipeline.railway.internal:8001
DIGITAL_TWIN_URL=http://digital-twin.railway.internal:8002
SENSOR_SIMULATOR_URL=http://sensor-simulator.railway.internal:8003

# Model Configuration
ML_MODEL_VERSION=v1.0.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_SIMULATION=true
ENABLE_ML_PREDICTIONS=true
ENABLE_DIGITAL_TWIN=true

# Performance
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
PREDICTION_CACHE_TTL_SECONDS=3600

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
